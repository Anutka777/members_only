<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, html: {'data-turbo' => "false"}, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username,  autofocus: true %>
    <% unless resource.errors[:username].blank? %>
    <span class="error_explanation">
      Username 
      <%= resource.errors[:username].first %>
    </span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email" %>
    <% unless resource.errors[:email].blank? %>
    <span class="error_explanation">
      E-mail 
      <%= resource.errors[:email].first %>
    </span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% unless resource.errors[:password].blank? %>
    <span class="error_explanation">
      Password 
      <%= resource.errors[:password].first %>
    </span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <% unless resource.errors[:password_confirmation].blank? %>
    <span class="error_explanation">
      Password confirmation  
      <%= resource.errors[:password_confirmation].first %>
    </span>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
