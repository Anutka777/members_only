<h1>Posts</h1>

<% @posts.all.each do |post| %>
  <ul>
    <li>
      <%= post.body %> 
      posted by 
      <% if user_signed_in? %>
        <%= post.user.username %>
      <% else %>
        anonymous
      <% end %>
    </li>
  </ul>
<% end %>

<br>
  <%= link_to 'Create a post', new_post_path %>
